@model IEnumerable<S3G11_PVFAPP.Models.Uses>

@{
    ViewBag.Title = "Index";
}

<h2>Uses</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary float-end" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UsesID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RawMaterial.MaterialName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UsesID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ProductDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RawMaterial.MaterialName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { pid = item.Product.ProductID, rid = item.RawMaterial.MaterialID }, new { @class = "btn btn-outline-primary" })
            @Html.ActionLink("Details", "Details", new { pid = item.Product.ProductID, rid = item.RawMaterial.MaterialID }, new { @class = "btn btn-outline-secondary" })
            @Html.ActionLink("Delete", "Delete", new { pid = item.Product.ProductID, rid = item.RawMaterial.MaterialID }, new { @class = "btn btn-outline-warning" })
        </td>
    </tr>
}

</table>
