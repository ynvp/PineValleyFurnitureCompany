@model IEnumerable<S3G11_PVFAPP.Models.SalesTerritory>

@{
    ViewBag.Title = "Index";
}

<h2>Sales Territories</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary float-end" })
</p>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TerritoryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TerritoryName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TerritoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TerritoryName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TerritoryID }, new { @class = "btn btn-outline-primary" }) 
                @Html.ActionLink("Details", "Details", new { id = item.TerritoryID }, new { @class = "btn btn-outline-secondary" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.TerritoryID }, new { @class = "btn btn-outline-warning" })
            </td>
        </tr>
    }

</table>
